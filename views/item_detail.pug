extends layout 

block content 

    main(class="grow h-3/4").flex.justify-center.p-6.items-center 
        img(src=item.imageURL class=" h-1/2") 
        article.flex.flex-col.items-center.justify-center
            h1= item.name 
            h3 Price: $#{item.price} | Stock Available: #{item.available} 
            p= item.desc 

